<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:background="@drawable/background_book"
        />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="130dp"

                android:background="@drawable/pink_purple_grdnt" >
                <ImageView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/student_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/dupleit_logo"
                    android:elevation="5dp" />
            </RelativeLayout>
            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_above="@+id/linearLayout"
                android:gravity="center">

                <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/student_photo"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@mipmap/dupleit_logo"
                    android:elevation="5dp" />
            </RelativeLayout>-->


            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/header_cover_image"
                android:elevation="4dp">


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginBottom="70dp"

                android:gravity="center_vertical|center"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/AppTheme.Dark"
                        >
                        <EditText
                            android:id="@+id/userName"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@null"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:hint="Enter Name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_people"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"

                    android:background="@color/colorGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/AppTheme.Dark"
                        >
                        <EditText
                            android:id="@+id/userEmail"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@null"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:hint="Email Id"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_email"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/colorGrey" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="11"
                        android:theme="@style/AppTheme.Dark"
                        >
                        <EditText
                            android:id="@+id/userPassword"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@null"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/imgPassword"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_password" />
                    <ImageView
                        android:id="@+id/imgPassword1"
                        android:layout_width="34dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_show_password"
                        android:visibility="gone"/>
                </LinearLayout>
                <View
                    android:id="@+id/viewPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/colorGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="11"
                        android:theme="@style/AppTheme.Dark"
                        >
                        <EditText
                            android:id="@+id/userPasswordConfirm"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@null"
                            android:drawablePadding="8dp"

                            android:gravity="center_vertical"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/imgConfirmPassword"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_password" />
                    <ImageView
                        android:id="@+id/imgConfirmPassword1"
                        android:layout_width="34dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_show_password"
                        android:visibility="gone"/>
                </LinearLayout>
                <View
                    android:id="@+id/viewConfirmPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/colorGrey" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="11"
                        android:theme="@style/AppTheme.Dark"
                        >
                        <EditText
                            android:id="@+id/userMobile"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@null"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:hint="Mobile No."
                            android:inputType="phone"
                            android:maxLines="1"
                            android:paddingBottom="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="16sp" />

                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:padding="1dp"
                        android:src="@drawable/ic_mobile"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/colorGrey" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:text="Date of birth" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <Spinner
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></Spinner>

                        <Spinner
                            android:id="@+id/month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></Spinner>

                        <Spinner
                            android:id="@+id/year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></Spinner>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_calender" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:background="@color/colorGrey" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="6dp"
                    android:text="Gender"
                    android:textColor="@color/colorGrey"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RadioGroup
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/userMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:gravity="center"

                                />
                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="42dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_male"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/userFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                />
                            <ImageView
                                android:layout_width="34dp"
                                android:layout_height="42dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_female"/>


                        </LinearLayout>
                    </RadioGroup>
                </LinearLayout>
                <Button
                    android:id="@+id/registerUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_button"
                    android:text="Sign UP"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/pink_purple_grdnt"

        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@color/colorPrimary"
            android:visibility="visible" />

        <TextView
            android:id="@+id/goLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/login_layout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="20dp"
            android:text="Already have an account?  Log In."
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />
    </LinearLayout>

</FrameLayout>
