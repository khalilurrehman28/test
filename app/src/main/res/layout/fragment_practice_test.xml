<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameTest"
    tools:context="company.app.lawuniverse.PYQPTest.TestsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pyqpRecycler"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/noSearchResultFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="15dp"
        android:text="No search results found"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noCourseFound"
        android:text="No Test available yet"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingTop="15dp"
        android:visibility="gone"
        />
</FrameLayout>
